<p id="notice"><%= notice %></p>

<h1>Email Recipients </h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Attachment</th>
      <th>Photo</th>

      <th colspan="3" align="center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= check_box_tag(user.id)%></td>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.contact %></td>
        <td><%= link_to 'download' ,user_download_path(user.id) %></td>
        <!--<td><%= user.document_file_name %></td>-->
        <td><%= image_tag user.document.url(:thumb) %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<%= button_to "Delete" ,action: 'delete_selected_user' %>


